pkgname=mitobench
pkgver=0.2
pkgrel=1
pkgdesc="Workbench to analyze MT genomes."
arch=('any')
url="http://it.inf.uni-tuebingen.de/?page_id=161"
license=('custom')
depends=('java-runtime')
source=("MitoBench-${pkgver}.jar" "starter.sh")
noextract=("MitoBench-${pkgver}.jar")
md5sums=('SKIP' 'SKIP')

package() {
	  cd "$srcdir"
          install -D -m755 "${srcdir}/MitoBench-${pkgver}.jar" "${pkgdir}/opt/$pkgname/MitoBench-${pkgver}.jar"
          install -D -m755 "${srcdir}/starter.sh" "${pkgdir}/opt/$pkgname/starter.sh"
          install -D -m755 "${pkgdir}/opt/$pkgname/starter.sh" "${pkgdir}/usr/bin/$pkgname"
	}

